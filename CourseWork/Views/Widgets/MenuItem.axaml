<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CourseWork.Views.Widgets.MenuItem">
    <UserControl.Styles>
        <StyleInclude Source="avares://CourseWork/Styles/Dimens.axaml"/>
        <StyleInclude Source="avares://CourseWork/Styles/Fonts.axaml"/>
    </UserControl.Styles>
    <Border Classes="menu-item-border" Background="{DynamicResource MenuItemBackground}">
        <StackPanel Spacing="4">
            <Image Name="Icon" />
            <TextBlock Foreground="{DynamicResource MenuItemNameColor}" HorizontalAlignment="Center" Name="ItemName" />
        </StackPanel>
    </Border>
</UserControl>