<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CourseWork.Views.Widgets.BookItem">
    <Border Classes="book-card-border">
        <StackPanel Classes="book-card" Orientation="Vertical">
            <Image Stretch="Uniform" Name="Cover" />
            <Border Classes="title-box-border">
                <StackPanel Orientation="Vertical">
                    <TextBlock Name="Title" />
                    <TextBlock TextTrimming="CharacterEllipsis" Name="Subtitle" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>