<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CourseWork.Views.Widgets.BookItem">
        <StackPanel Orientation="Vertical">
            <Image Stretch="UniformToFill" Name="Cover" Height="396" />
            <Border Padding="12 12">
                <StackPanel Orientation="Vertical" Spacing="4">
                    <TextBlock Classes="book-item__title" Name="Title" TextWrapping="Wrap" />
                    <TextBlock Classes="book-item__subtitle" TextTrimming="CharacterEllipsis" Name="Subtitle" />
                </StackPanel>
            </Border>
        </StackPanel>
</UserControl>