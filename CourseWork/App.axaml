<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:CourseWork"
             x:Class="CourseWork.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light" />
        <StyleInclude Source="avares://CourseWork/Styles/Dimens.axaml" />
        <StyleInclude Source="avares://CourseWork/Styles/Fonts.axaml" />
        <StyleInclude Source="avares://CourseWork/Styles/Colors.axaml" />
        <StyleInclude Source="avares://CourseWork/Views/Widgets/MenuItem.axaml" />
        <StyleInclude Source="avares://CourseWork/Views/Widgets/ImageButton.axaml" />
        <StyleInclude Source="avares://CourseWork/Views/Widgets/DecoratedTextBox.axaml" />
    </Application.Styles>
    
    <Application.Resources>
        <SolidColorBrush x:Key="MenuItemNameColor">#2196F3</SolidColorBrush>
        <SolidColorBrush x:Key="MenuItemBackground">#E3F2FD</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryColor">#006DB3</SolidColorBrush>
    </Application.Resources>
</Application>